                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>tfx</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.22.2</version>
