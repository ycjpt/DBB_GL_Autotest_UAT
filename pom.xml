                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>healthcheck</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.22.2</version>
                        <configuration>
                            <includes>
                                <include>WebRunnerUATHealthCheck.java</include>
                            </includes>
